@require '../variables'
@require '../util'
@require '../base'

.page__content
  position relative

  > *
    @extend .text-column

.page__description
  padding 10px 80px
  opacity 0.4
  font-size 1.3rem
  line-height 1.5

.page__publish-date
  display inline-block
  border-top 1px solid #666
  font-style italic
  opacity 0.6
  font-size 1rem
  padding 15px 50px
  margin-top 10px
  opacity 0.4
  line-height 1
  text-align center

a.org-avatar
  width 200px
  margin 10px
  display inline-block
  img
    width 100%

@media screen and (max-width: mobile-width)
  .page__content
    padding-left 20px
    padding-right 20px