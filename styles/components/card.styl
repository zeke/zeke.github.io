@require '../variables'
@require '../util'
@require '../base'

.cards
  @extend .vanilla-list
  display block
  float none
  clear both
  overflow hidden

.card
  @extend .float-left
  height 360px
  margin 0 0 40px 0
  padding 0 (card-gutter-width/2) 20px (card-gutter-width/2)

  @media screen and (max-width: mobile-width)
    @extend .float-none
    width 100%
    height auto
    // margin 0 0 40px 0
    padding 0

.card-inner
  width card-width
  display block
  -webkit-box-shadow 0px 1px 15px 1px rgba(0,0,0,0.08)
  -moz-box-shadow 0px 1px 15px 1px rgba(0,0,0,0.08)
  box-shadow 0px 1px 15px 1px rgba(0,0,0,0.08)

  @media screen and (max-width: mobile-width)
    width 100%
    -webkit-box-shadow none
    -moz-box-shadow none
    box-shadow none

.card-thumbnail
  display block
  width 100%
  height card-thumbnail-height
  overflow hidden
  background card-background-color
  img
    width: 100%

  @media screen and (max-width: mobile-width)
    height auto
    background none

.card-details
  padding 14px 20px
  overflow hidden
  text-align center
  background card-background-color
  border-bottom-left-radius 5px
  border-bottom-right-radius 5px
  @media screen and (max-width: mobile-width)
    background none
    padding 0px 20px

.card-details-title
  font-size: 1rem
  line-height 1.6
  text-decoration none

.card-details-description
  font-size: 0.9rem
  @extend .faint
  @extend .unpadded
  @extend .small-text
  text-align center
  line-height 1.4
